var trans_ttf=func(string)
{
    var str=["","","","","",""];
    for(var i=0;i<size(string);i+=1)
    {
        var number=string[i];
        if(97<=number and number<=122)
            for(var j=0;j<6;j+=1)
                str[j]~=char_ttf[number-96][j];
        elsif(65<=number and number<=90)
            for(var j=0;j<6;j+=1)
                str[j]~=char_ttf[number-64][j];
        else
            for(var j=0;j<6;j+=1)
                str[j]~=char_ttf[0][j];
    }
    foreach(var i;str)
        println(i);
    return;
}
